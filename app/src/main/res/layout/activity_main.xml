<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="56dp"-->
            <!--android:background="@color/ui_appBar_light">-->

            <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_width="24dp"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_height="24dp"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_marginStart="16dp"&ndash;&gt;-->
                <!--&lt;!&ndash;android:layout_marginTop="16dp"&ndash;&gt;-->
                <!--&lt;!&ndash;android:src="@drawable/navbar_mobile_light" />&ndash;&gt;-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Switch
                android:id="@+id/switchMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:checked="false"
                android:text="Fraudster"
                android:visibility="invisible" />
            <TextView
                android:id="@+id/textMessageFlow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="54dp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingExtra="5sp"
                android:text="Select Flow"
                android:textColor="#20272b"
                android:visibility="invisible"
                android:textSize="24sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/button_send_money"
                android:layout_width="334dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:background="@drawable/round_rect_main"
                android:fontFamily="sans-serif-medium"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/send_money"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/button_buy_online"
                android:layout_width="334dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_rect_main"
                android:fontFamily="sans-serif-medium"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:lineSpacingExtra="6sp"
                android:text="@string/buy_online"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/buttonBIO"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="28dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"

                android:gravity="center"
                android:lineSpacingExtra="2sp"
                android:text="OR START DATA COLLECTION"
                android:textColor="#8cd409"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/paygilant_logo" />

            <EditText

                android:id="@+id/testSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="testSize"
                android:inputType="number"
                android:numeric="integer"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>