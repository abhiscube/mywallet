<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_amount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/ui_appBar_light"
    tools:context=".Amount">

    <TextView
        android:text="@string/amount_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/insertInstructions"
        android:textSize="15sp"/>

    <Button
        android:text="SEND"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/send"
        android:textColor="@color/ui_appBar_light"
        android:background="@color/ui_appBar_start"
        android:layout_marginBottom="0dp"
        android:onClick="onApproveClicked"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_above="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/amountVal"
        android:layoutDirection="ltr">
        <TableRow
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:layout_alignParentLeft="true">

            <Button
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"
                tools:text="1"/>

            <Button
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true">


            <Button
                android:text="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button6"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true">

        <Button
                android:text="7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button7"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button8"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button9"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_alignParentLeft="true">


        <Button
                android:text="."
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonDot"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button0"
                android:textSize="32sp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textColor="@color/colorPaygilant"
                android:lineSpacingExtra="-12sp"
                android:gravity="center"/>

            <Button
                android:text="DEL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonDel"
                android:textSize="20sp"/>
        </TableRow>
    </TableLayout>

    <EditText
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:id="@+id/amountVal"
        android:background="?android:attr/windowBackground"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="36sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/colorPaygilant"
        android:lineSpacingExtra="7sp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/currPincode"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <TextView
        android:text="Choose Contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/currPincode"
        android:layout_below="@+id/insertInstructions"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:onClick="onChooseContactClicked" />

</RelativeLayout>
